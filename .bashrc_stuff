## stuff to append to .bashrc

# make destructive things interactive
alias ll='ls -l'
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

set -o vi
export VISUAL=vim
export EDITOR="$VISUAL"
export TERM=xterm-256color
PATH=$PATH:~/bin

