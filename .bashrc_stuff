# use a constant ssh-agent socket and start it if it isn't running
# you need to create the .ssh/ssh-agent.sock file
if command -v ssh-add >/dev/null 2>&1; then
    export SSH_AUTH_SOCK=~/.ssh/ssh-agent.sock
    ssh-add -l 2>/dev/null >/dev/null
    if [ $? -ge 2 ]; then
      # ^ ssh-add returns 1 when it's running but there's no identities added
      # and 2 when there's no existing agent
      ssh-agent -a "$SSH_AUTH_SOCK" >/dev/null
    fi
fi

