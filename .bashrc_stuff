    plexed_id=$plexed_id'|t.'$(tmux display-message -p "#S")
fi


#~ grab the current kubernetes context
function __kube_ps1 {
    kinfo=""
    if command -v kubectx >/dev/null 2>&1; then
        kinfo="$(kubectx -c)"
    fi
    if command -v kubens >/dev/null 2>&1; then
        kinfo="${kinfo}.$(kubens -c)"
    fi
    if [ "$kinfo" ]; then
        kinfo="|k.${kinfo}"
    fi
    echo $kinfo
}


