## stuff to append to .bashrc

# make destructive things interactive
alias ll='ls -l'
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

set -o vi
export VISUAL=vim
export EDITOR="$VISUAL"
PATH=$PATH:~/bin

