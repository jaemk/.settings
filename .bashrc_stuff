# or a simpler version
cd () {
    builtin cd $1
    if [ -f .env ]; then
        read -p "Source .env? [Y/n]" yn
        case $yn in
            "" ) echo "sourcing .env"; set -a; source .env; set +a;;
            [Yy] ) echo "sourcing .env"; set -a; source .env; set +a;;
            * ) echo "ignoring";;
        esac
    fi
}

